{
  "name": "fitbounty",
  "version": "1.0.0",
  "description": "NOSTR fitness challenge bot with Lightning Network bounties and MediaPipe exercise verification",
  "main": "src/bot/index.js",
  "scripts": {
    "start": "bun run src/bot/index.js",
    "dev": "bun --watch src/bot/index.js",
    "setup": "bun run scripts/setup.js",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "migrate": "bun run scripts/migrate.js",
    "umbrel:deploy": "bash scripts/deploy-umbrel.sh",
  },
  "keywords": [
    "nostr",
    "bitcoin",
    "lightning",
    "fitness",
    "exercise",
    "challenge",
    "bounty",
    "mediapipe",
    "umbrel"
  ],
  "author": "FitBounty Team",
  "license": "MIT",
  "dependencies": {
    "nostr-tools": "^1.17.0",
    "ws": "^8.16.0",
    "ln-service": "^57.26.1",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "bcrypt": "^5.1.1",
    "joi": "^17.11.0",
    "axios": "^1.6.2",
    "form-data": "^4.0.0",
    "node-cron": "^3.0.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "@types/bun": "latest"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/fitbounty.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/fitbounty/issues"
  },
  "homepage": "https://github.com/yourusername/fitbounty#readme"
}